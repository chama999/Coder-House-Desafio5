<%- include('partials/header'); -%>

        <% if (list.length == 0) {%>
            <h2>No hay productos.</h2>
        <% } else { %>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col"><b>Nombre</b></th>
                        <th scope="col"><b>Precio</b></th>
                        <th scope="col"><b>Imagen</b></th>
                    </tr>
                </thead>
                <tbody>
                <% list.forEach((products) => { %>
                    <tr>
                        <th scope="row"><%= products.title %></td>
                        <td><%= products.price %></td>
                        <td><img src="<%= products.thumbail %>" width="100px;"></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        <% } %>

        <a class="btn btn-dark btn-lg active" href="/" role="button" aria-pressed="true">Nuevo Producto</a>

<%- include('partials/footer'); -%>